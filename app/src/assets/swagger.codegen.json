        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "post_id": {
                      "description": "id сохраненного поста",
                      "example": 123,
                      "type": "integer"
                    }
                  },
                  "type": "object"
                }
              }
